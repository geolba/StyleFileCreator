<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Fensterhintergrund -->
    <LinearGradientBrush x:Key="WindowBackground" StartPoint="0,0" EndPoint="1,1">
        <LinearGradientBrush.GradientStops>
            <GradientStop Offset="0.0" Color="White" />
            <GradientStop Offset="1.0" Color="DarkGray" />
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>
    <!-- Ende Fensterhintergrund -->

    <!-- Linearer horizontaler Hintergrund Dunkel nach Hell -->
    <LinearGradientBrush x:Key="LinearBackground" StartPoint="0,0" EndPoint="1,0">
        <LinearGradientBrush.GradientStops>
            <GradientStop Offset="0.0" Color="DarkGray" />
            <GradientStop Offset="1.0" Color="White" />
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>
    <!-- Ende linearer horizontaler Hintergrund -->
</ResourceDictionary>